<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>

<AnchorPane id="AnchorPane" prefHeight="300.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="awesomechatapp.FXMLResetPasswordWindowController">
   <children>
      <Button fx:id="btnResetPassword" layoutX="360.0" layoutY="250.0" mnemonicParsing="false" onAction="#clickedResetPassword" prefHeight="30.0" prefWidth="120.0" text="Reset Password" />
      <Line endX="460.0" layoutX="20.0" layoutY="70.0" />
      <Text layoutX="20.0" layoutY="110.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Please check your email!" wrappingWidth="460.0">
         <font>
            <Font name="Verdana" size="14.0" />
         </font>
      </Text>
      <Text layoutX="20.0" layoutY="40.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Reset your password..." wrappingWidth="460.0">
         <font>
            <Font name="Verdana" size="20.0" />
         </font>
      </Text>
      <Text layoutX="20.0" layoutY="130.0" strokeType="OUTSIDE" strokeWidth="0.0" text="We have sent you a code at the address:" wrappingWidth="460.0">
         <font>
            <Font name="Verdana" size="14.0" />
         </font>
      </Text>
      <Text fx:id="txtEmailAddress" layoutX="20.0" layoutY="150.0" strokeType="OUTSIDE" strokeWidth="0.0" text="email.address@domain.com" wrappingWidth="460.0">
         <font>
            <Font name="Verdana Bold" size="12.0" />
         </font>
      </Text>
      <Text layoutX="20.0" layoutY="180.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Choose a new password and enter the received code in the following box:" wrappingWidth="330.0">
         <font>
            <Font name="Verdana" size="14.0" />
         </font>
      </Text>
      <TextField fx:id="tfCode" alignment="CENTER" layoutX="360.0" layoutY="166.0" prefHeight="34.0" prefWidth="120.0" promptText="Code">
         <font>
            <Font name="Verdana Bold" size="17.0" />
         </font>
      </TextField>
      <PasswordField fx:id="pfNewPassword" layoutX="20.0" layoutY="210.0" prefHeight="30.0" prefWidth="290.0" promptText="New password..." />
      <PasswordField fx:id="pfRepeatNewPassword" layoutX="20.0" layoutY="250.0" prefHeight="30.0" prefWidth="290.0" promptText="Repeat new password..." />
   </children>
</AnchorPane>
